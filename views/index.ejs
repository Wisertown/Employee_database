<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>index page</title>
</head>
<body>
	<h1>Employee Records</h1>
	<form method='post' action='/users'>
		<label for="first_name">First Name:</label>
		<input type="text" name='first_name'>
		<label for="last_name">Last Name:</label>
		<input type="text" name='last_name'>
		<label for="email">Email:</label>
		<input type="text" name='email'>
		<label for="date_of_hire">Date of Hire:</label>
		<input type="date" name='date_of_hire'>
		<label for="job_title">Job Title:</label>
		<input type="text" name="job_title">
		<input type="submit" value="add user">
	</form>
	<table>
	<% for(index in users){ %>
		<tr>			
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Date Of Hire</th>
			<th>Job title</th>
			<th>Delete</th>
			<th>Edit</th>
		</tr>
		<tr>
			<td><%= users[index].first_name %></td>
			<td><%= users[index].last_name %></td>
			<td><%= users[index].email %></td>
			<td><%= users[index].date_of_hire %></td>
			<td><%= users[index].job_title %></td>
			<td><a href="/users/<%= users[index]._id %>/delete">delete</a></td>
			<td><a href="/users/<%= users[index]._id %>/edit">edit</a></td>
		</tr>

		<br>
	<% } %>
	</table>
</body>
</html>